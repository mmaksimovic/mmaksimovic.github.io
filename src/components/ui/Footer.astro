---
import { Image } from "astro:assets";
import brand from "../../assets/brand.svg";

const footerLinks = [
  { name: "O nama", href: "/#about" },
  { name: "Usluge", href: "/#services" },
  { name: "Iskustva", href: "/#testimonials" },
  { name: "Blog", href: "/blog" },
  { name: "Kontakt", href: "/#contact" },
];
---

<footer class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8 xl:col-span-1">
        <Image src={brand} alt="Brand Logo" class="w-[219px]" loading="lazy" />
        <p class="text-gray-500 text-base">
          Ključna reč za vaš uspeh na društvenim mrežama.
        </p>
      </div>
      <div class="mt-12 grid grid-cols-2 gap-8 xl:mt-0 xl:col-span-2">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Linkovi</h3>
            <ul class="mt-4 space-y-4">
              {footerLinks.map((link) => (
                <li>
                  <a href={link.href} class="text-base text-gray-500 hover:text-aquamarin transition-colors">
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Kontakt</h3>
            <ul class="mt-4 space-y-4">
              <li>
                <a href="mailto:info@kljucnarec.rs" class="text-base text-gray-500 hover:text-aquamarin transition-colors">
                  milica@kljucnarec.rs
                </a>
              </li>
              <li>
                <a href="tel:+381601234567" class="text-base text-gray-500 hover:text-aquamarin transition-colors">
                  +381 61 3186652
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-12 border-t border-gray-200 pt-8">
      <p class="text-base text-gray-400 xl:text-center">
        &copy; {new Date().getFullYear()} Ključna reč. Sva prava zadržana.
      </p>
    </div>
  </div>
</footer>
