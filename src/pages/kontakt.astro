---
import Layout from '~/layouts/PageLayout.astro';
import ContactForm from '~/components/widgets/Kontakt.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt - MJ Social Media',
};
---

<Layout metadata={metadata}>
  <ContactForm
    title="Kontaktirajte nas"
    subtitle="Spremni smo da odgovorimo na sva vaša pitanja i pomognemo vam da unapredite vaše prisustvo na društvenim mrežama."
    inputs={[
      {
        type: 'text',
        name: 'ime',
        label: 'Ime',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email adresa',
      },
    ]}
    textarea={{
      label: 'Poruka',
    }}
    disclaimer={{
      label:
        'Slanjem ovog obrasca, pristajete da vas kontaktiramo u vezi sa vašim upitom. Vaše informacije će biti tretirane u skladu sa našom politikom privatnosti.',
    }}
    description="Naš tim će vam odgovoriti u roku od 24 sata."
  />

  <!-- Rest of the content remains the same -->
</Layout>