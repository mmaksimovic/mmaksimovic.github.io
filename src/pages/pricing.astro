---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Cenovni paketi za social media menadžere | MJ Social Media',
  description: 'Prilagođeni cenovni planovi za vođenje društvenih mreža, dizajnirani da odgovore na potrebe malih biznisa i pojedinaca u Srbiji.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Cenovni planovi"
    title="Pristupačne usluge za društvene mreže"
    subtitle="Izaberite plan koji odgovara vašim potrebama i budžetu."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Naši cenovni paketi"
    subtitle="Plaćate samo za ono što vam je potrebno"
    prices={[
      {
        title: 'Osnovni paket',
        subtitle: 'Idealan za male biznise i preduzetnike',
        price: 150,
        period: 'mesečno',
        items: [
          {
            description: 'Kreiranje i objavljivanje do 10 postova mesečno',
          },
          {
            description: 'Upravljanje profilom na jednoj društvenoj mreži',
          },
          {
            description: 'Osnovna mesečna analitika',
          },
          {
            description: 'Komunikacija putem emaila ili poruka',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Započnite odmah',
          href: '#',
        },
      },
      {
        title: 'Standardni paket',
        subtitle: 'Najbolji izbor za mala i srednja preduzeća',
        price: 300,
        period: 'mesečno',
        items: [
          {
            description: 'Kreiranje i objavljivanje do 20 postova mesečno',
          },
          {
            description: 'Upravljanje profilima na dve društvene mreže',
          },
          {
            description: 'Komunikacija sa pratiocima (community management)',
          },
          {
            description: 'Detaljna mesečna analitika',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Započnite odmah',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'najpopularniji',
      },
      {
        title: 'Napredni paket',
        subtitle: 'Za kompanije koje žele sveobuhvatnu podršku',
        price: 450,
        period: 'mesečno',
        items: [
          {
            description: 'Kreiranje i objavljivanje do 30 postova mesečno',
          },
          {
            description: 'Upravljanje profilima na tri društvene mreže',
          },
          {
            description: 'Napredna analitika i konsultacije',
          },
          {
            description: 'Redovni sastanci sa klijentima',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Započnite odmah',
          href: '#',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Česta pitanja"
    subtitle="Odgovori na vaša najčešća pitanja o cenama i uslugama"
    columns={1}
    items={[
      {
        title: 'Da li nudite prilagođene pakete?',
        description: 'Naravno! Ako vam neki od paketa ne odgovara u potpunosti, možemo prilagoditi uslugu vašim potrebama.',
      },
      {
        title: 'Kako funkcioniše naplata?',
        description: 'Naplata se vrši mesečno, a usluge možete otkazati u bilo kom trenutku.',
      },
      {
        title: 'Koje društvene mreže podržavate?',
        description: 'Podržavam Facebook, Instagram, LinkedIn i Twitter. Ako koristite drugu mrežu, slobodno me kontaktirajte za više informacija.',
      },
      {
        title: 'Da li nudite vođenje plaćenih kampanja?',
        description: 'Vođenje plaćenih kampanja može biti uključeno u napredne pakete ili se može dogovoriti posebno.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Spremni da unapredite vaše društvene mreže?"
    subtitle="Kontaktirajte me danas i započnite saradnju."
    actions={[
      {
        variant: 'primary',
        text: 'Kontaktirajte me',
        href: '/',
      },
    ]}
  />
</Layout>
