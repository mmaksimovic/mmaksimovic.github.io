---
import Layout from '~/layouts/PageLayout.astro';
import Grid from '~/components/blog/Grid.astro';

const metadata = {
  title: 'Portfolio - MJ Social Media',
};

const projects = [
  {
    title: 'Kampanja za ModniSvet',
    description: 'Povećali smo angažovanje na Instagramu za 150% kroz kreativnu kampanju.',
    image: '~/assets/images/portfolio/modnisvet.jpg',
  },
  {
    title: 'Rebrendiranje TechStart-a',
    description: 'Pomogli smo u rebrendiranju i lansiranju nove kampanje na LinkedInu.',
    image: '~/assets/images/portfolio/techstart.jpg',
  },
  {
    title: 'Influenser kampanja za ZelenaHrana',
    description: 'Organizovali smo uspešnu influenser kampanju koja je povećala prodaju za 200%.',
    image: '~/assets/images/portfolio/zelenahrana.jpg',
  },
  {
    title: 'Facebook oglašavanje za FitnessCentar',
    description: 'Naša Facebook kampanja je dovela do 500 novih članova za samo mesec dana.',
    image: '~/assets/images/portfolio/fitnesscentar.jpg',
  },
  {
    title: 'YouTube strategija za EdukativniKanal',
    description: 'Pomogli smo u rastu YouTube kanala sa 1.000 na 100.000 pratilaca za 6 meseci.',
    image: '~/assets/images/portfolio/edukativnikanal.jpg',
  },
  {
    title: 'TikTok kampanja za MladiBrend',
    description: 'Kreirali smo viralnu TikTok kampanju koja je dosegla milion pregleda.',
    image: '~/assets/images/portfolio/mladibrend.jpg',
  },
];
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter mb-4 font-heading">
      Naš Portfolio
    </h1>
    <p class="text-xl text-gray-600 mb-8">
      Pogledajte neke od naših najuspešnijih projekata i kampanja na društvenim mrežama.
    </p>
    <Grid posts={projects} />
  </section>
</Layout>